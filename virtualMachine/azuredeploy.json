{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3",
            "metadata": {
                "description": "description"
            }
        },
        "windowsOrRedHat": {
            "type": "string",
            "allowedValues": [
                "Windows",
                "RedHat"
            ],
            "defaultValue": "Windows",
            "metadata": {
                "description": "Operation System for the Virtual Machine."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "adminSecret": {
            "type": "securestring",
            "metadata": {
                "description": "description"
            }
        },
        "authenticationType": {
            "type": "string",
            "allowedValues": [
                "password",
                "key"
            ],
            "metadata": {
                "description": "description"
            }
        },
        "subnetReferenceId": {
            "type": "string",
            "defaultValue": "/subscriptions/071488dd-f4ea-4dc1-a295-e39af4a0e3de/resourceGroups/demo/providers/Microsoft.Network/virtualNetworks/vnet/subnets/default",
            "metadata": {
                "description": "description"
            }
        }
    },
    "functions": [],
    "variables": {
        "storageAccountName": "[concat('diag', uniqueString(resourceGroup().id))]",
        "networkSecurityGroupName": "[concat(parameters('virtualMachineName'), '-nsg')]",
        "publicIPAddress": "[concat(parameters('virtualMachineName'), '-pip')]",
        "networkInterfaceName": "[concat(parameters('virtualMachineName'), '-nic')]",
        "virtualMachineName": "[concat(parameters('virtualMachineName'), '-vm')]",
        "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
                "publicKeys": [
                    {
                        "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                        "keyData": "[parameters('adminSecret')]"
                    }
                ]
            }
        },
        "windowsImage": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
        },
        "linuxImage": {
            "publisher": "RedHat",
            "offer": "RHEL",
            "sku": "8.2",
            "version": "latest"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('storageAccountName')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            },
            "tags": {
                "tagName": "tagValue"
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('networkSecurityGroupName')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "RemoteConnection",
                        "properties": {
                            "description": "Allow RDP/SSH",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "[if(equals(parameters('windowsOrRedHat'), 'Windows'), 3389, 22)]",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            },
            "tags": {
                "tagName": "tagValue"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('publicIPAddress')]",
            "zones": [
                "1"
            ],
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "tags": {
                "tagName": "tagValue"
            }
        },
        {
            "dependsOn": [
                "[variables('networkSecurityGroupName')]",
                "[variables('publicIPAddress')]"
                ],
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('networkInterfaceName')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IPconfig1",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddress'))]"
                            },
                            "privateIPAddress": "Dynamic",
                            "subnet": {
                                "id": "[parameters('subnetReferenceId')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]"
                }
            },
            "tags": {
                "tagName": "tagValue"
            }
        },
        {
            "dependsOn": [
                "[variables('storageAccountName')]",
                "[variables('networkInterfaceName')]"
            ],
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('virtualMachineName')]",
            "zones": [
                "1"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminSecret')]",
                    "linuxConfiguration": "[if(equals(parameters('authenticationType'), 'password'), json('null'), variables('linuxConfiguration'))]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]",
                            "properties": {
                                "primary": true
                            }
                        }
                    ]
                },
                "storageProfile": {
                    "imageReference": "[if(equals(parameters('windowsOrRedHat'), 'Windows'), variables('windowsImage'), variables('linuxImage'))]",
                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                        {
                            "diskSizeGB": 1023,
                            "lun": 0,
                            "createOption": "Empty"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))).primaryEndpoints.blob]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}