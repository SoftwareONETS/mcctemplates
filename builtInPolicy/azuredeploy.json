{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyDefinitionName": {
            "type": "string",
            "allowedValues": [
                "allowedLocations"
            ],
            "metadata": {
                "displayName": "Policy definition name",
                "description": "Name of the policy to assign."
            }
        },
        "policyAssignmentName": {
            "type": "string",
            "metadata": {
                "displayName": "Policy assignment name",
                "description": "Name to use for a specific policy assignment."
            }
        },
        "policyAssignmentMode": {
            "type": "string",
            "metadata": {
                "displayName": "Policy assignment mode",
                "description": "Enforced (default) or disabled."
            },
            "allowedValues": [
                "Default",
                "DoNotEnforce"
            ],
            "defaultValue": "Default"
        },
        "policyParameters": {
            "type": "object",
            "metadata": {
                "displayName": "Policy parameters",
                "description": "Policy parameters as an object parameter type."
            },
            "defaultValue": {
            }
        }
    },
    "functions": [],
    "variables": {
        "allowedLocations": {
            "policyDefinitionId": "e56962a6-4747-49cd-b67b-bf8b01975c4c"
        },
        "policyAssignmentName": "[concat(parameters('policyAssignmentName'), '_', parameters('policyDefinitionName'))]",
        "policyDefinitionId": "[if(contains(parameters('policyDefinitionName'), 'allowedLocations'), variables('allowedLocations').policyDefinitionId, variables('allowedLocations').policyDefinitionId)]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "[variables('policyAssignmentName')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "scope": "[subscription().id]",
                "enforcementMode": "[parameters('policyAssignmentMode')]",
                "policyDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/policyDefinitions/', variables('policyDefinitionId'))]",
                "parameters": "[parameters('policyParameters')]"
            }
        }
    ]
}